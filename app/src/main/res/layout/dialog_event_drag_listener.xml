<?xml version="1.0" encoding="utf-8"?>
<com.life.jorange.event.drag.view.DragListenerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/dimens_100dp"
        android:layout_height="@dimen/dimens_100dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="avatar"
        android:contentDescription="avatar"
        android:textSize="@dimen/dimens_20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logo_view"
        android:layout_width="@dimen/dimens_100dp"
        android:layout_height="@dimen/dimens_100dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="logo"
        android:contentDescription="logo"
        android:textSize="@dimen/dimens_20sp"
        app:layout_constraintLeft_toRightOf="@+id/avatar_view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_100dp"
        android:background="@color/red_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</com.life.jorange.event.drag.view.DragListenerLayout>